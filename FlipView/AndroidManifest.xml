<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flipview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:name="application.NewsUpApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name="activity.ArticleActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
        </activity>
        
        <activity
            android:name="activity.LockScreenActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="devide.article.DevideArticle"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="activity.MenuActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="activity.SettingActivity" >
        </activity>
        
        <activity
            android:name="activity.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service 
            android:name="service.LockScreenService" >
        </service>
        
        <service 
            android:name="service.ArticleManageService" >
        </service>
		
        <receiver 
            android:name="receiver.LockScreenReceiver" >
        </receiver>
        
        <receiver 
            android:name="receiver.ScreenOnOffReceiver" >
        </receiver>
        
        <meta-data
            android:name="DATABASE"
            android:value="sugar_example.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="database" />
    </application>

</manifest>