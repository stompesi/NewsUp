<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B0AEAE"
    android:gravity="clip_vertical"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ViewFlipper
            android:id="@+id/lockScreenViewFlipper"
            android:layout_width="312dp"
            android:layout_height="520dp"
            android:layout_marginBottom="23.333dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="70dp"
            android:background="#FFFFFF"
            android:orientation="vertical" >
        </ViewFlipper>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="71dp"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/lockScreenTime"
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/lockScreenAM"
                android:layout_width="25dp"
                android:layout_height="12dp"
                android:layout_marginTop="-7dp"
                android:gravity="left"
                android:text="PM"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lockScreenDate"
                android:layout_width="120dp"
                android:layout_height="33dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="11 01 토요일"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>