<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/article_viewFlipper_width"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_viewFlipper_margin_left" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_content_layout_height"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_title_textView_height"
            android:gravity="center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_image_imageView_height"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_content_textView_height"
            android:gravity="center"
            android:text="Large Text"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_description_layout_height"
            android:background="#00BFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/time"
                android:layout_width="@dimen/article_description_time_textView_width"
                android:layout_height="@dimen/article_description_time_textView_height"
                android:layout_marginLeft="@dimen/article_description_time_textView_margin_left"
                android:layout_marginTop="@dimen/article_description_time_textView_margin_top"
                android:gravity="center"
                android:text="Large Text"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="@dimen/article_description_empty_layout_width"
                android:layout_height="@dimen/article_description_empty_layout_height" >
            </LinearLayout>

            <TextView
                android:id="@+id/provider"
                android:layout_width="@dimen/article_description_provider_textView_width"
                android:layout_height="@dimen/article_description_provider_textView_height"
                android:layout_marginRight="@dimen/article_description_provider_textView_margin_right"
                android:layout_marginTop="@dimen/article_description_provider_textView_margin_top"
                android:gravity="center"
                android:text="Large Text"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>