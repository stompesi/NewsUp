<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidhuman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:background="@drawable/related_article_detail_background" >

        

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="2dp" >

            <org.tworoom.android.newsup.text.EllipsizingTextView
                android:id="@+id/titleItem"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:textColor="#000000"
                android:textSize="15sp"
                androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />

            <org.tworoom.android.newsup.text.EllipsizingTextView
                android:id="@+id/authorItem"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="3"
                android:textColor="#000000"
                android:textSize="10sp"
                androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/iamgeItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>


