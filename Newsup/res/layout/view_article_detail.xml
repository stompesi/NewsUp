<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidhuman="http://schemas.android.com/apk/res/com.example.newsup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/viewArticleDetail"
        android:layout_width="match_parent"
        android:layout_height="575dp"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp" >
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" >

            <!-- 좋아요 싫어요 나타내야한다 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:visibility="visible" >

            <com.example.newsup.text.StyledLastArticleTextView
                android:id="@+id/viewArticleBottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/view_article_detail_page_margin_end"
                android:gravity="end|center_vertical"
                android:textSize="12sp"
                androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>