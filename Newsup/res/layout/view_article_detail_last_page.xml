<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidhuman="http://schemas.android.com/apk/res/com.example.newsup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/relatevie_original_layout"
        android:layout_width="match_parent"
        android:layout_height="575dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >

        <com.example.newsup.text.StyledLastArticleTextView
            android:id="@+id/relatedArticle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="관련기사"
            android:textColor="#000000"
            android:textSize="17sp"
            androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />

        <ListView
            android:id="@+id/itemList"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scrollbars="none" >
        </ListView>

        <com.example.newsup.text.StyledLastArticleTextView
            android:id="@+id/relatedArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="관련 동영상"
            android:textColor="#000000"
            android:textSize="17sp"
            androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/youtube_first"
                    android:layout_width="160dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:visibility="visible" >

                    <com.example.newsup.text.EllipsizingTextView
                        android:id="@+id/youtube_first_title"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:padding="8dp"
                        android:text="영화제목"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />

                    <ImageButton
                        android:id="@+id/youtube_first_play"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/playbutton"
                        android:padding="8dp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="8dp"
                android:layout_height="match_parent" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="160dp"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/youtube_second"
                    android:layout_width="160dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:visibility="visible" >

                    <com.example.newsup.text.EllipsizingTextView
                        android:id="@+id/youtube_second_title"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:padding="8dp"
                        android:text="영화제목 "
                        android:textColor="#000000"
                        android:textSize="11sp"
                        androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />

                    <ImageButton
                        android:id="@+id/youtube_second_play"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/playbutton"
                        android:padding="8dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F4F4F4"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" >

            <!-- 좋아요 싫어요 나타내야한다 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:visibility="visible" >

            <com.example.newsup.text.StyledLastArticleTextView
                android:id="@+id/viewArticleBottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/view_article_detail_page_margin_end"
                android:gravity="end|center_vertical"
                android:textSize="12sp"
                androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>