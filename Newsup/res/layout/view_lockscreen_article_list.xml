<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aa="http://schemas.android.com/apk/res/android/com.example.flipview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="81dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000" >
        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="264dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="17dp"
            android:textColor="#000000"
            android:textSize="33sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/lockscreen_text_back"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/time"
                android:layout_width="@dimen/lockscreen_description_time_textView_width"
                android:layout_height="@dimen/lockscreen_description_time_textView_height"
                android:layout_marginLeft="@dimen/lockscreen_description_time_textView_margin_left"
                android:layout_marginTop="@dimen/lockscreen_description_time_textView_margin_top"
                android:gravity="center"
                android:text="Large Text"
                android:textColor="#000000"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="33dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="."
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/provider"
                android:layout_width="@dimen/lockscreen_description_provider_textView_width"
                android:layout_height="@dimen/lockscreen_description_provider_textView_height"
                android:layout_marginRight="@dimen/lockscreen_description_provider_textView_margin_right"
                android:layout_marginTop="@dimen/lockscreen_description_provider_textView_margin_top"
                android:gravity="center"
                android:text="Large Text"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:ellipsize="end"
            android:maxLines="@integer/lockscreen_content_textView_maxlines"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="16dp"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>