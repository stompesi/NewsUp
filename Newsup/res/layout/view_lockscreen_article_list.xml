<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidhuman="http://schemas.android.com/apk/res/com.example.newsup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="81dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000" >
        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:scaleType="fitCenter" />

        <com.example.newsup.text.StyledTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:ellipsize="end"
            android:lineSpacingExtra="7dp"
            android:maxLines="2"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="2dp"
            android:textColor="#000000"
            android:textSize="21sp"
            androidhuman:typeface="NotoSansKR-Medium.ttf.mp3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/lockscreen_text_back"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.example.newsup.text.StyledTextView
                android:id="@+id/provider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="14dp"
                android:textColor="#000000"
                android:textSize="10sp"
                androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />

            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent" >
            </LinearLayout>

            <com.example.newsup.text.StyledTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Â·"
                android:textColor="#000000"
                android:textSize="12sp"
                androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />

            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent" >
            </LinearLayout>

            <com.example.newsup.text.StyledTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="10sp"
                androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />
        </LinearLayout>

        <com.example.newsup.text.StyledTextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:ellipsize="end"
            android:lineSpacingExtra="7dp"
            android:maxLines="5"
            android:paddingBottom="7dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="7dp"
            android:textColor="#000000"
            android:textSize="12sp"
            androidhuman:typeface="NotoSansKR-Regular.ttf.mp3" />
    </LinearLayout>

</LinearLayout>